@model nuevoProyecto.Models.TextArea

@{
    ViewBag.Title = "Consola";
}

<h2>Consola</h2>
@Html.ActionLink("Ver Select TEMPORAL", "VerSelect")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TextArea</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <text class="col-md-8">
                <form action="pantalla1" method="post">
                    @Html.TextAreaFor(model => model.Data, new { @class = "form-control", @cols = 100, @rows = 20 })
                    @*@Html.TextAreaFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control", @cols = 80, @rows = 10 } })*@
                    <input type="submit" value="Subir" class="btn btn-primary" />
                </form>
            </text>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
